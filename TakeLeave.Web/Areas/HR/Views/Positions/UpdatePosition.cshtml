@model TakeLeave.Web.Models.PositionViewModel

<div id="modal-content-position-update">
    <div class="card shadow container w-50 mt-2 position-form justify-content-center text-center">
        <h3 class="card-title mt-3">Update position</h3>

        <div class="card-body">
            <form method="post" asp-action="UpdatePosition" asp-controller="Positions">
                <div class="input-group mb-3">
                    <label asp-for="@Model.Title" class="input-group-text">Position Title</label>
                    <input asp-for="@Model.Title" type="text" class="form-control" placeholder="Title" readonly />
                </div>
                <div class="input-group mb-3">
                    <label asp-for="@Model.SeniorityLevel" class="input-group-text"></label>
                    <input asp-for="@Model.SeniorityLevel" type="text" class="form-control" placeholder="Seniority Level" readonly>
                </div>
                <div class="input-group mb-3">
                    <label asp-for="@Model.EmployeeRoles" class="input-group-text"></label>
                    <select asp-for="@Model.EmployeeRoleId" class="form-control"
                            asp-items="@(new SelectList(Model.EmployeeRoles,"Key","Value"))">
                        <option value="">Select role:</option>
                    </select>
                </div>
                <div class="input-group mb-3">
                    <label asp-for="@Model.Description" class="input-group-text"></label>
                    <textarea asp-for="@Model.Description" type="text" class="form-control" placeholder="Description" rows="4"></textarea>
                </div>
                <div class="form-group mt-3">
                    <div class="col text-center">
                        <input type="submit" value="Update" class="btn btn-primary col-4 col-form-label" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

