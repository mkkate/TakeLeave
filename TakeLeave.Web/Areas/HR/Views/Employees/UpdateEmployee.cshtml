@model TakeLeave.Web.Areas.HR.Models.EmployeeUpdateViewModel

<h2>Update Employee</h2>

<div class="card shadow container w-75 mt-4 employee-form">
    <div class="card-body justify-content-center">
        <form method="post">
            <div class="row mb-3">
                <div class="col">
                    <label asp-for="@Model.FirstName" class="control-label"></label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="@Model.LastName" class="control-label"></label>
                    <input asp-for="@Model.LastName" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="@Model.UserName" class="control-label"></label>
                    <input asp-for="@Model.UserName" class="form-control" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label asp-for="@Model.Email" class="control-label"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="@Model.Password" class="control-label"></label>
                    <input asp-for="@Model.Password" class="form-control" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label asp-for="@Model.Address" class="control-label"></label>
                    <input asp-for="@Model.Address" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="@Model.IDNumber" class="control-label"></label>
                    <input asp-for="@Model.IDNumber" class="form-control" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label asp-for="@Model.EmploymentStartDate" class="control-label"></label>
                    <input asp-for="@Model.EmploymentStartDate" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="@Model.EmploymentEndDate" class="control-label"></label>
                    <input asp-for="@Model.EmploymentEndDate" class="form-control" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label asp-for="@Model.PositionTitlesAndSeniorityLevels.Item1" class="control-label">Position:</label>
                    <select asp-for="@Model.Position.Title" class="form-control"
                            asp-items="@(new SelectList(Model.PositionTitlesAndSeniorityLevels.Item1))">
                        <option value="">Select title:</option>
                    </select>
                </div>
                <div class="col">
                    <label asp-for="@Model.PositionTitlesAndSeniorityLevels.Item2" class="control-label">Seniority:</label>
                    <select asp-for="@Model.Position.SeniorityLevel" class="form-control"
                            asp-items="@(new SelectList(Model.PositionTitlesAndSeniorityLevels.Item2))">
                        <option value="">Select level:</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    @await Component.InvokeAsync("DaysOffs", Model.DaysOff)
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="col text-center">
                    <input type="submit" value="Update" class="btn btn-primary col-4 col-form-label" />
                </div>
            </div>
        </form>
    </div>
</div>
