@model List<TakeLeave.Web.Areas.HR.Models.LeaveCalendarViewModel>
@{
    var daysInMonth = DateTime.DaysInMonth(DateTime.Now.Year, DateTime.Now.Month);
    var firstDayOfMonth = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
    var currentDay = DateTime.Now.Day;

    var firstDayOffset = ((int)firstDayOfMonth.DayOfWeek + 6) % 7;
}

<div class="container justify-content-center">
    <div class="row">
        <div class="col">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#"><</a></li>
                <li class="page-item"><a class="page-link">@DateTime.Now.ToString("MMMM")</a></li>
                <li class="page-item"><a class="page-link" href="#">></a></li>
            </ul>
        </div>

        <div class="col">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#"><</a></li>
                <li class="page-item"><a class="page-link">@DateTime.Now.ToString("yyy")</a></li>
                <li class="page-item"><a class="page-link" href="#">></a></li>
            </ul>
        </div>

        <div class="col">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">today</a></li>
                <li class="page-item"><a class="page-link" href="#">week</a></li>
                <li class="page-item"><a class="page-link" href="#">month</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="calendar mt-4">
    <div class="calendar-header">Monday</div>
    <div class="calendar-header">Tuesday</div>
    <div class="calendar-header">Wednesday</div>
    <div class="calendar-header">Thursday</div>
    <div class="calendar-header">Friday</div>
    <div class="calendar-header">Saturday</div>
    <div class="calendar-header">Sunday</div>

    @for (int i = 0; i < firstDayOffset; i++)
    {
        <div class="calendar-day empty-day"></div>
    }

    @for (int day = 1; day <= daysInMonth; day++)
    {
        var date = new DateTime(DateTime.Now.Year, DateTime.Now.Month, day);
        var employeesOnLeave = Model.FirstOrDefault(m => m.Date == date)?.EmployeesOnLeave;
        var isCurrentDay = day == currentDay;

        bool isWeekend = date.DayOfWeek == DayOfWeek.Saturday || date.DayOfWeek == DayOfWeek.Sunday;

        <div class="calendar-day @(isCurrentDay ? "current-day" : "") @(isWeekend ? "weekend" : "")">
            <h5>@day</h5>
            @if (employeesOnLeave != null && employeesOnLeave.Any())
            {
                var employeesCount = @employeesOnLeave.Count();
                <div class="dropdown">
                    @if (employeesCount == 1)
                    {
                        <button class="btn dropdown-toggle">@employeesCount employee</button>
                    }
                    else
                    {
                        <button class="btn dropdown-toggle">@employeesCount employees</button>
                    }
                    <div class="employee-dropdown">
                        @foreach (var employee in employeesOnLeave)
                        {
                            <a data-toggle="tooltip"
                               title="@employee.LeaveType:&#10;From: @employee.LeaveStartDate.ToString("dd.MM.yyyy")&#10;To: @employee.LeaveEndDate.ToString("dd.MM.yyyy.")">
                                @employee.EmployeeFirstName @employee.EmployeeLastName
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();

            $('.dropdown-toggle').on('click', function (e) {
                var dropdown = $(this).next('.employee-dropdown');
                $('.employee-dropdown').not(dropdown).removeClass('show-dropdown');
                dropdown.toggleClass('show-dropdown');
                e.stopPropagation();
            });

            $(document).on('click', function () {
                $('.employee-dropdown').removeClass('show-dropdown');
            });

            $('.employee-dropdown').on('click', function (e) {
                e.stopPropagation();
            });
        });
    </script>
}
